            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Inicio" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ThingActivity"
